{
  "name": "ludicrous-speed-api",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server.ts",
    "dev:edge": "wrangler dev",
    "build": "rimraf dist && tsc",
    "build:edge": "rimraf edge && bun build ./src/app.ts --outfile=edge/index.js --target=browser --minify && echo \"\nðŸ›¸ EDGE BUNDLE READY\n------------------\nSize: $(ls -lh edge/index.js | awk '{print $5}')\nStatus: They've gone to plaid!\n\"",
    "start": "bun dist/server.js",
    "format": "biome format --write",
    "lint": "biome check",
    "fix": "biome check --write",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/db/seed.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^1.0.0-beta.12-a5629fb",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.7",
    "ofetch": "^1.5.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "drizzle-kit": "^1.0.0-beta.12-a5629fb",
    "drizzle-seed": "^0.3.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  }
}
